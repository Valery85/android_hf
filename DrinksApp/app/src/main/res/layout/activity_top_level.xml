<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopLevelActivity">

    <ImageView
        android:id="@+id/drinks_app_id"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/drinks_app_logo"
        android:contentDescription="@string/drinks_app_logo"/>

    <ListView
        android:id="@+id/list_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/drinks_app_id"
        android:layout_below="@id/drinks_app_id"
        android:entries="@array/options"
     />

</RelativeLayout>